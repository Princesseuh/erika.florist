---
import ContentHeader from "$components/shared/ContentHeader.astro";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import BaseLayout from "./BaseLayout.astro";

interface Props {
	project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const { Content } = await render(project);
---

<BaseLayout title={project.data.title} description={project.data.tagline}>
	<article class="post w-[72ch] max-w-full">
		<ContentHeader item={project} includeTags={false} />
		<Content />
	</article>
</BaseLayout>
