---
import { getURLFromEntry, readableDate } from "$utils";
import type { CollectionEntry } from "astro:content";

interface Props {
  article: CollectionEntry<"blog">;
}

const { article } = Astro.props;
---

<section class="mb-3">
  <a href={getURLFromEntry(article)}>
    <h4 class="m-0 inline-block text-xl">{article.data.title}</h4>
  </a>

  <div class="mb-2 text-sm text-creative-work">
    {readableDate(article.data.date)}
    Â·
    {
      article.data.tags
        .map((tag) => (
          <a href={"/articles/tags/" + tag + "/"} class="underline">
            {tag}
          </a>
        ))
        .reduce((prev: string, curr: string) => (prev === null ? [curr] : [prev, ", ", curr]))
    }
  </div>

  {article.data.tagline || null}
</section>
