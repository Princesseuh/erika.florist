{
	"cSpell.words": ["Astro", "fdir", "Rehype", "vite", "Segoe", "Roboto"],
	"cSpell.ignorePaths": [
		"package-lock.json",
		"node_modules",
		"vscode-extension",
		".git/",
		".vscode",
		"pnpm-lock.yaml"
	],
	"editor.formatOnSave": true,
	"[markdown]": {
		"editor.wordWrap": "on"
	},
	"prettier.documentSelectors": ["**/*.astro"],
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"astro"
	],
	"editor.codeActionsOnSave": {
		"source.organizeImports": "always"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"files.associations": {
		"*.mdoc": "markdown"
	},
	"biome.enabled": false
}
