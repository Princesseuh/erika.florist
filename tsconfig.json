{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"$components/*": ["src/components/*"],
			"$data/*": ["src/data/*"],
			"$layouts/*": ["src/layouts/*"],
			"$utils": ["src/utils/index.ts"]
		}
	},
	"include": ["**/*", "**/*.astro"],
	"exclude": ["node_modules", "**/node_modules/*", ".vscode", "dist", "target"]
}
