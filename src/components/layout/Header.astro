---
import { headerMenu } from "$data/sidebarMenu";
import Logo from "./Logo.astro";

interface Props {
	includeAboutInHeader?: boolean | undefined;
}

const { includeAboutInHeader } = Astro.props;
---

<header class="grid h-[125px] grid-cols-layout bg-accent-valencia py-4">
	<section class="ml-4 text-white-sugar-cane">
		<Logo />
		{
			includeAboutInHeader && (
				<section class="text-sm">
					Currently employed at <a href="https://astro.build">Astro</a>. I thrive in high-impact but
					often overlooked areas, such as editor tooling.
				</section>
			)
		}
	</section>
	<section class="mx-auto flex w-centered-width items-center justify-end">
		<section class="grid h-min grid-cols-2 gap-x-10 justify-self-end text-xl font-[550]">
			{
				headerMenu.map((item) => (
					<a
						href={`/${item}`}
						class:list={[
							"p-1 tracking-wider text-white-sugar-cane hover:bg-white-sugar-cane hover:text-accent-valencia",
						]}
					>
						{item}
					</a>
				))
			}
		</section>
	</section>
</header>
