---
import { blurb, headerMenu } from "$data/sidebarMenu";
import Logo from "./Logo.astro";

interface Props {
	includeAboutInHeader?: boolean | undefined;
}

const { includeAboutInHeader } = Astro.props;
---

<header
	class="xl:grid-cols-header-xl hidden h-[125px] bg-accent-valencia px-4 py-4 sm:flex xl:grid"
>
	<section class="text-white-sugar-cane lg:basis-1/3">
		<Logo />
		{
			includeAboutInHeader && (
				<section class="text-sm">
					<Fragment set:html={blurb} />
				</section>
			)
		}
	</section>
	<section class="mx-auto flex w-centered-width items-center justify-end">
		<section class="grid h-min grid-cols-2 gap-x-10 justify-self-end text-xl font-[550]">
			{
				headerMenu.map((item) => (
					<a href={`/${item}`} class:list={["button-style-bg-accent p-1 tracking-wider"]}>
						{item}
					</a>
				))
			}
		</section>
	</section>
</header>
