---
import Icon from "$components/Icon.astro";
---

<button id="go-up" title="Scroll to top" class=""
	><Icon
		name="arrow-up"
		size={28}
		title=""
		class={"bg-isabelline dark:bg-darker-skylines rounded-full"}
	/></button
>

<script></script>

<style>
	button {
	}
</style>

<script>
	const app = document.getElementById("app");
	const goUp = document.getElementById("go-up");

	if (app && goUp) {
		goUp.addEventListener("click", () => {
			window.scrollTo({ top: 0, behavior: "smooth" });
		});

		window.addEventListener("scroll", () => {
			if (window.scrollY > 500) {
				goUp.inert = false;
				goUp.className = "opacity-35";
			} else {
				goUp.inert = true;
				goUp.className = "opacity-0";
			}
		});
	}
</script>
